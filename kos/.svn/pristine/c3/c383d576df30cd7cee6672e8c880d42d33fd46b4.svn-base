.quantity-container {
    display: flex;
    align-items: center;
    margin-top: 10px;
}

.quantity-btn {
    padding: 5px 10px;
    background-color: #f0f0f0;
    border: 1px solid #ccc;
    cursor: pointer;
    font-size: 16px;
}

.quantity-btn:focus {
    outline: none;
}

.quantity-input {
    width: 40px;
    text-align: center;
    margin: 0 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    padding: 5px;
}

.prd-name-container {
    display: flex;
    align-items: center;  /* 수평 정렬 */
    gap: 8px;  /* 상품명과 수량 버튼 사이에 여백 추가 */
}

.prd-name {
    font-size: 14px;
    font-weight: bold;
}

.quantity-controls {
    display: inline-flex;
    align-items: center;
    gap: 6px;  /* 버튼 간의 여백을 줄임 */
}

.quantity-controls button {
    padding: 2px 5px;  /* 버튼의 패딩을 더 줄임 */
    font-size: 16px;  /* 폰트 크기를 더 줄여서 버튼 크기 축소 */
    background-color: #f0f0f0;
    border: 1px solid #ccc;
    cursor: pointer;
    width: 24px;  /* 버튼의 너비를 더 줄여서 크기를 축소 */
    text-align: center;
}

.quantity-controls .quantity {
    font-size: 14px;  /* 수량 텍스트 크기를 줄임 */
    padding: 3px;
    width: 28px;  /* 수량 영역의 너비를 더 줄임 */
    text-align: center;
    border: 1px solid #ccc;
}

.quantity-controls button:focus {
    outline: none;
}

/* 알림창 스타일 */
.popup {
    display: none;  /* 기본적으로 보이지 않게 설정 */
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);  /* 화면 중앙 정렬 */
    background-color: rgba(0, 0, 0, 0.7);  /* 반투명 배경 */
    width: 80%;
    max-width: 400px;
    padding: 20px;
    border-radius: 8px;
    color: white;
    z-index: 9999;
}

/* 팝업 내용 스타일 */
.popup-content {
    text-align: center;
    font-size: 32px;
}

/* 닫기 버튼 스타일 */
.popup-close {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 20px;
    color: white;
    cursor: pointer;
}

.popup-close:hover {
    color: #f44336;
}