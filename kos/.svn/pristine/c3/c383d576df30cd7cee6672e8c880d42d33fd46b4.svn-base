body {
    margin: 0;
    position: relative;  /* body에 relative 위치 지정 */
}

.custom-box {
    width: 227px; /* 버튼 너비와 동일하게 설정 */
    height: 149px;
    flex-shrink: 0;
    border-radius: 0px 15px 15px 0px;
    border: 1px solid #000;
    background: rgba(217, 217, 217, 0.0);
    box-shadow: 3px 3px 12px 3px rgba(0, 0, 0, 0.25);
    margin-top: 58px;
    margin-left: 0;
    display: flex;
    align-items: center;
    justify-content: center; /* 로고를 중앙에 배치 */
}

.button-container {
    margin-top: 44px; /* custom-box 아래로 44px 떨어지도록 설정 */
    display: flex;
    flex-direction: column;
    align-items: flex-start; /* 버튼을 왼쪽 정렬 */
}

.custom-button {
    width: 227px; /* 버튼 너비 */
    height: 95px;
    flex-shrink: 0;
    border-radius: 0; /* 기본 설정: 각진 버튼 */
    border: 1px solid #000;
    background-color: #fff; /* 버튼 배경색을 흰색으로 설정 */
    box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.25);
    font-size: 28px; /* 글씨 크기 설정 */
    font-family: 'Pretendard', sans-serif; /* 폰트 설정 */
    font-weight: 600; /* 세미볼드 설정 */
    cursor: pointer;
    margin: 0; /* 버튼 간격 제거 */
    color: #AFAFAF; /* 기본 글씨 색 설정 */
    display: flex;
    align-items: center; 
    justify-content: flex-start; /* 텍스트와 아이콘을 왼쪽 정렬 */
    padding: 0 10px; /* 텍스트와 아이콘 사이에 약간의 간격 추가 */
    transition: color 0.3s; /* 글씨 색 변경 시 전환 효과 추가 */
}

.custom-button, .callbox, .additional-button {
    text-decoration: none; /* 밑줄 제거 */
}

/* 버튼 내부의 아이콘 스타일 */
.custom-button img {
    margin-right: 10px; /* 아이콘과 텍스트 사이에 간격 추가 */
    vertical-align: middle; /* 아이콘을 텍스트 중간에 맞춤 */
}

/* 첫 번째 버튼의 오른쪽 위 모서리에 반지름 값 적용 */
.custom-button:first-child {
    border-top-right-radius: 15px;
}

/* 다섯 번째 버튼의 오른쪽 아래 모서리에 반지름 값 적용 */
.custom-button:last-child {
    border-bottom-right-radius: 15px;
}

/* 버튼 클릭 시 글씨 색 변경 */
.custom-button:active {
    color: #000000; /* 클릭 시 글씨 색을 검은색으로 변경 */
}

