body {
    font-family: Arial, sans-serif;
    text-align: center;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #f8f9fa; /* 배경색 추가 */
}

.container {
    width: 95%;
    max-width: 1053px;
    margin: 0 auto;
    padding: 40px 0;
    box-sizing: border-box;
    background-color: #fff; /* 컨테이너 배경색 */
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* 그림자 효과 추가 */
    text-align: center;
    min-height: 100vh; /* 전체 높이를 채워서 레이아웃 조정 */
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.title {
    font-size: 36px; /* 텍스트 크기를 더 크게 조정 */
    font-weight: bold;
    margin-bottom: 30px; /* 여백을 더 넓힘 */
}

.title p {
    margin: 0;
    padding: 0;
}

.highlight {
    color: blue;
}

.table {
    width: 90%;
    margin: 0 auto; /* 테이블을 중앙에 배치 */
    border-collapse: collapse;
    margin-top: 30px; /* 여백을 더 넓힘 */
    margin-bottom: 50px; /* 아래쪽에 마진 추가 */
    border: 2px solid #000; /* 테이블 전체 테두리 두께를 더 두껍게 조정 */
}

.table th, .table td {
    border: none; /* 테이블 셀 경계를 없앰 */
    padding: 20px; /* 패딩을 더 넓혀서 셀 내부 간격 조정 */
    text-align: center;
    border-bottom: 1px solid #000; /* 각 행의 아래쪽에만 경계를 추가 */
}

.total-row {
    font-size: 28px; /* 결제금액 행의 폰트 크기 조정 */
}

.total-row td {
    color: blue;
    font-weight: bold;
}

.button-container {
    margin-top: 30px; /* 여백을 더 넓힘 */
}

.button {
    display: inline-block;
    padding: 20px 40px; /* 버튼 크기를 더 크게 조정 */
    margin: 15px;
    border: 2px solid #000; /* 버튼 테두리 두께를 더 두껍게 조정 */
    border-radius: 5px;
    text-decoration: none;
    color: #000;
    font-size: 24px;
}

.button-blue {
    background-color: blue;
    color: #fff;
}

.footer-left p {
    font-size: 10px; /* 소셜 미디어 및 텍스트의 폰트 크기 줄임 */
}

@media (max-width: 768px) {
    .title {
        font-size: 32px;
    }

    .table th, .table td {
        padding: 15px;
    }

    .button {
        padding: 15px 30px;
        font-size: 20px;
    }
}

@media (max-width: 480px) {
    .title {
        font-size: 28px;
    }

    .table th, .table td {
        padding: 10px;
    }

    .button {
        padding: 10px 20px;
        font-size: 18px;
    }
}

.total-amount {
    margin-top: 20px; /* 테이블과 더 넉넉한 간격 */
    font-size: 28px; /* 폰트 크기 증가 */
    font-weight: bold; /* 텍스트 굵게 */
    text-align: center; /* 중앙 정렬 */
    color: #333; /* 색상 (필요 시 변경 가능) */
}


