.frame-2,
.frame-2 * {
  box-sizing: border-box;
}
.frame-2 {
  background: #ffffff;
  height: 1000px; /* 자동 높이로 변경 */
  max-height: 80vh; /* 최대 높이를 뷰포트의 80%로 제한 */
  overflow-y: auto; /* 내용이 넘칠 경우 스크롤 가능 */
}
