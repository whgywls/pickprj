/* 전체 컨테이너 */
.kiosk-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 1053px;
    height: 1622px;
    margin: 0 auto;
    background-color: #ffffff; /* 흰색 배경 */
    font-family: Arial, sans-serif;
    padding: 20px;
    box-sizing: border-box;
    border: 1px solid #ddd;
}

/* 안내 문구 */
.title-area {
    width: 90%;
    text-align: center;
    margin-bottom: 10px;
}

.title-area h1 {
    font-size: 48px; /* 더 큰 글씨 */
    font-weight: bold;
    color: #333;
    margin: 0 0 20px; /* 박스 바로 위 간격 조정 */
}

/* 입력 디스플레이 */
.display-area {
    width: 90%;
    text-align: center;
    margin-bottom: 20px;
}

.input-field {
    width: 100%;
    height: 100px; /* 입력 박스 높이 증가 */
    font-size: 48px; /* 텍스트 크기 증가 */
    text-align: center;
    border: 2px solid #ddd;
    border-radius: 10px;
    background-color: #fff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* 키패드 */
.keypad {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    width: 90%;
}

.key {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 150px; /* 버튼 높이 */
    font-size: 36px;
    font-weight: bold;
    color: #333;
    background-color: #fff;
    border: 2px solid #ddd;
    border-radius: 10px;
    cursor: pointer;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    transition: background-color 0.2s ease;
}

.key:hover {
    background-color: #f0f0f0;
}

.key.empty {
    background-color: transparent;
    border: none;
    cursor: default;
}

/* 하단 버튼 */
.action-buttons {
    display: flex;
    justify-content: space-between;
    width: 90%;
    margin-top: 40px; /* 간격 추가 */
}

button {
    flex: 1;
    margin: 0 10px;
    padding: 30px; /* 높이 증가 */
    font-size: 28px; /* 버튼 텍스트 크기 확대 */
    height: 100px; /* 버튼 높이 증가 */
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: background-color 0.2s ease;
}

.cancel-button {
    background-color: #c0c0c0; /* 취소 버튼 색상 */
    color: #fff;
}

.cancel-button:hover {
    background-color: #a9a9a9; /* 밝은 회색 */
}

.submit-button {
    background-color: #007bff; /* 확인 버튼 색상 */
    color: #fff;
}

.submit-button:hover {
    background-color: #0056b3; /* 어두운 파랑 */
}
